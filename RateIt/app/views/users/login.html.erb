<center><h1>Login to your Account</h1>




<%= form_for(:user, url: login_path) do |f|%>
  <%= f.label :username %>
  <%= f.text_field :username, class: "shortInput" %> <br />
  <%= f.label :password %>
  <%= f.password_field :password, class: "shortInput" %><br><br>

 <%= f.submit "login", class: "button login" %>   
<% end %> 



 <% if session[:user_id] %>
  <h1><%= @user.name %></h1>
  <h2>Email: <%= @user.email %></h2>
  <h2>Google UID: <%= @user.uid %></h2>
  
  <% else %>
    <%= link_to('Log in with google!', '/auth/google_oauth2') %>
  <% end %>
  

<br></center>
